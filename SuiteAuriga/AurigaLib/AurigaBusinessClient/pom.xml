							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<configuration>
					<packageName>wsclient</packageName>
					<wsdlUrls>
						<wsdlUrl>http://172.27.1.139:8081/business/soap/AurigaServiceSoap?wsdl</wsdlUrl>
					</wsdlUrls>
				</configuration>
			</plugin>
			<!-- da cancellare non dovrebbe servire -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>client.WsClient</mainClass>
				</configuration>
			</plugin>
