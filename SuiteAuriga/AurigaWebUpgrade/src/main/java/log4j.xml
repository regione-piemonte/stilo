<?xml version="1.0" encoding="UTF-8"?><log4j:configuration>	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">		<layout class="org.apache.log4j.PatternLayout">			<param name="ConversionPattern" value="%d{dd/MM/yyyy HH:mm:ss,SSS} %5p (%F:%L) - %m%n" />		</layout>	</appender>	<appender name="R" class="org.apache.log4j.RollingFileAppender">		<param name="File" value="C:/Logs/AurigaWeb/AurigaWeb.log" />		<param name="Append" value="false" />		<param name="Encoding" value="UTF-8" />		<param name="MaxFileSize" value="4096KB" />		<param name="MaxBackupIndex" value="4" />		<layout class="org.apache.log4j.PatternLayout">			<param name="ConversionPattern" value="%d{dd/MM/yyyy HH:mm:ss,SSS} %5p (%F:%L) - %m%n" />		</layout>	</appender>	<appender name="PerformanceLoggerFile" class="org.apache.log4j.FileAppender">		<param name="File" value="C:/Logs/AurigaWeb/AurigaWebPerf.log" />		<param name="Append" value="false" />		<param name="Encoding" value="UTF-8" />		<param name="MaxFileSize" value="4096KB" />		<param name="MaxBackupIndex" value="4" />		<layout class="org.apache.log4j.PatternLayout">			<param name="ConversionPattern" value="[%d{dd/MM/yyyy HH:mm:ss}] %m%n" />		</layout>	</appender>	<appender name="StoragePerformanceLoggerFile" class="org.apache.log4j.FileAppender">		<param name="File" value="C:/Logs/AurigaWeb/StorageAurigaWebPerf.log" />		<param name="Append" value="false" />		<param name="Encoding" value="UTF-8" />		<param name="MaxFileSize" value="4096KB" />		<param name="MaxBackupIndex" value="4" />		<layout class="org.apache.log4j.PatternLayout">			<param name="ConversionPattern" value="[%d{dd/MM/yyyy HH:mm:ss}] %m%n" />		</layout>	</appender>	<!-- <appender name="SessionListenerLoggerFile" class="org.apache.log4j.FileAppender">		<param name="File" value="C:/Logs/AurigaWeb/SessionListenerLogger.log" />		<param name="Append" value="false" />		<param name="Encoding" value="UTF-8" />		<param name="MaxFileSize" value="4096KB" />		<param name="MaxBackupIndex" value="4" />		<layout class="org.apache.log4j.PatternLayout">			<param name="ConversionPattern" value="[%d{dd/MM/yyyy HH:mm:ss}] %m%n" />		</layout>	</appender> -->	<logger name="it.eng.core.performance">		<level value="DEBUG" />		<appender-ref ref="PerformanceLoggerFile" />	</logger>	<logger name="it.eng.utility.storageutil.performance">		<level value="DEBUG" />		<appender-ref ref="StoragePerformanceLoggerFile" />	</logger>	<!-- <logger name="it.eng.utility.performance">		<level value="ERROR" />		<appender-ref ref="SessionListenerLoggerFile" />	</logger> -->	<root>		<level value="DEBUG" />		<appender-ref ref="stdout" />		<appender-ref ref="R" />	</root></log4j:configuration>